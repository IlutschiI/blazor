@page "/oneWayBinding"

<h1>OnWayBinding</h1>

<div class="row">
    <div class="col-md-2">
        Count: @count
    </div>    
    <div class="col-md-2 ">
        <input value="@count"/>
    </div>

</div>
<div class="row">
    <div class="col-md-2 ">
        <button class="btn btn-primary" onclick="@CountUp">Count me!</button>
    </div>
</div>

@functions{
    int count=0;

    private void CountUp()
    {
        count++;

    }
}